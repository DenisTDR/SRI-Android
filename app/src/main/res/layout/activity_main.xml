<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="@string/checking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btServiceStatusTxt"
        android:padding="7dp"
        android:background="@drawable/shape"
        android:textColor="@android:color/black"
        android:onClick="disconnectBTServiceIfConnected"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Spinner
        android:id="@+id/sendAsTypesSpinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:entries="@array/sendAsTypes"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/btServiceStatusTxt"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Panel"
        android:id="@+id/openBTpanelBtn"
        android:layout_marginBottom="33dp"
        android:onClick="openBluetoothPanel"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remote\nControl"
        android:id="@+id/openControlPanel1Btn"
        android:layout_marginBottom="74dp"
        android:onClick="openRemoteControlClickAction"
        android:layout_above="@+id/openBTpanelBtn"
        android:layout_alignLeft="@+id/openBTpanelBtn"
        android:layout_alignStart="@+id/openBTpanelBtn" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/theByteTxt"
        android:text="0"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/btServiceStatusTxt"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendThisByteBtn"
        android:layout_below="@+id/theByteTxt"
        android:onClick="sendThisByteBtnAction"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MS 2"
        android:id="@+id/button3"
        android:onClick="openMs2"
        android:layout_alignTop="@+id/openControlPanel1Btn"
        android:layout_toRightOf="@+id/openControlPanel1Btn"
        android:layout_toEndOf="@+id/openControlPanel1Btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:id="@+id/messagesActBtn"
        android:onClick="openMessagesActivity"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
